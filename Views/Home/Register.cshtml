@model pobreTITO_Models.RegisterViewModel
@{
    ViewData["Title"] = "Registro";
}


<div class="containerRegister">
    <h2 style="text-align: center;">@ViewData["Title"]</h2>
    <hr>

    <form class="form" id="RegisterForm" asp-action="Create" asp-controller="User" method="post">
        <div asp-validation-summary="All"></div>
        <div class="column" id="columnA">
            <label asp-for="Email">Email</label>
            <input class="registerInput" asp-for="Email" id="Email" data-val="true"
                data-val-required="Por favor ingrese su Email." onchange="canPost()" type="email">

            <label for="emailConfirmation">Confirmar Email</label>
            <input class="registerInput" data-val="true" data-val-required="Por favor reingrese su Email."
                onchange="canPost()" id="emailConfirmation" type="email">

            <label asp-for="Name">Nombre</label>
            <input class="registerInput" asp-for="Name" data-val="true" data-val-required="Por favor ingrese su nombre."
                id="name" onchange="canPost()" type="text">
        </div>

        <div class="column" id="columnB">
            <label asp-for="Lastname">Apellido</label>
            <input class="registerInput" asp-for="Lastname" id="lastname" data-val="true"
                data-val-required="Por favor reingrese su apellido." onchange="canPost()" type="text">

            <label asp-for="Password">Contrase単a</label>
            <input class="registerInput" asp-for="Password" data-val="true"
                data-val-required="Por favor reingrese la contrase単a." id="password" onchange="canPost()"
                type="password">

            <label for="passwordConfirmation">Confirmar contrase単a</label>
            <input class="registerInput" data-val="true" data-val-required="Por favor reingrese su contrase単a."
                onchange="canPost()" id="passwordConfirmation" type="password">
        </div>

        <div class="column" id="columnC">
            <label asp-for="Id">DNI</label>
            <input class="registerInput" asp-for="Id" name="id" onchange="canPost()" type="text">
        </div>

        <div id="submitContainer" class="mx-auto col-md-4 mt-3">
            <button id="submit" type="submit" class="btn btn-primary btn-block" disabled>Registrarse</button>
        </div>
    </form>

    <div id="ErrorMessageContainer">
        @{
            if (Model != null)
            {
                if (Model.Messages != null)
                {
                    foreach (var item in Model.Messages)
                    {
                        <p class="text-center fs-6 text-decoration-underline" style="color:#ab2020;" id="message">@item</p>
                    }
                }
            }
        }
    </div>
</div>